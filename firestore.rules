rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function hasRole(role) {
      return request.auth.token.role == role;
    }

    function isSchoolMember(schoolId) {
      return request.auth.token.schoolId == schoolId;
    }

    match /test_connection/{docId} {
      allow write: if isAuthenticated();
    }
    
    match /test_connection_uscentral1/{docId} {
      allow write: if isAuthenticated();
    }

    match /schools/{schoolId} {
      allow read: if isAuthenticated();
      allow write: if hasRole('system-admin');
    }

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if request.auth.uid == userId || hasRole('system-admin');
    }

    match /staff/{staffId} {
      allow read, write: if isSchoolMember(resource.data.schoolId);
    }
    
    match /books/{bookId} {
        allow read, write: if isSchoolMember(resource.data.schoolId);
    }

    match /examResults/{resultId} {
        allow read, write: if isSchoolMember(resource.data.schoolId);
    }

    match /disciplinary/{recordId} {
      allow read, write: if isSchoolMember(resource.data.schoolId);
    }

    match /counselling/{recordId} {
      allow read, write: if isSchoolMember(resource.data.schoolId);
    }
    
    match /ohs/{recordId} {
      allow read, write: if isSchoolMember(resource.data.schoolId);
    }
    
    match /transactions/{transactionId} {
      allow read, write: if isSchoolMember(resource.data.schoolId);
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
