rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* Collections you allow for authenticated users */
    match /schools/{schoolId}         { allow read, write: if request.auth != null; }
    match /staff/{staffId}            { allow read, write: if request.auth != null; }
    match /books/{bookId}             { allow read, write: if request.auth != null; }
    match /examResults/{resultId}     { allow read, write: if request.auth != null; }
    match /transactions/{transactionId} { allow read, write: if request.auth != null; }
    match /counselling/{recordId}     { allow read, write: if request.auth != null; }
    match /disciplinary/{recordId}    { allow read, write: if request.auth != null; }
    match /ohs/{recordId}             { allow read, write: if request.auth != null; }
    match /users/{userId}             { allow read, write: if request.auth != null; }


    /* ------------------------------------------------------------------
       Catchâ€‘all deny rule **last**: applies only if no block above matched
       ------------------------------------------------------------------ */
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
